extends layout

block content
  div(class="blue-bg")
  div(class = "container-fluid")
    div(class='row')
      div(class='col-xs-12')
        div(class='form-group padding-0')
        form(action="reunion" method="GET" id='huggs-form' name='huggs-form')
          input(type='text' class='form-control airline-input-js padding-0' name='airline' id='airline' placeholder='e.g. United' required)
          input(type='text' class='form-control flight-number v-hidden padding-0' name='flight_num' id='flight_num' placeholder='e.g. 1023' novalidate)
          button(class='btn outline margin-top-2 v-hidden margin-bottom-3' id='submit-look-up-flight' type='submit') Submit
block scripts
  //-jqeury has to be first
  script(src='/js/jquery-2.1.3.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/handlebars-v2.0.0.js')
  script(src='/js/typeahead.bundle.js')
  script(type='text/javascript').
    var airlines = !{airlines};
  script(src='/js/index.js')